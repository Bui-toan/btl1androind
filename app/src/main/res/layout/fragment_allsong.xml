<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="16dp"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/imageAlbum"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_album_background"
        android:clipToOutline="true"
        android:contentDescription="Album Image"
        android:scaleType="centerCrop"
        android:src="@drawable/allsongalbum" />

    <TextView
        android:id="@+id/textAlbumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="TẤT CẢ BÀI HÁT"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSongCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="0 bài hát"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/ListViewSong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#101010"
        android:dividerHeight="1dp"
        android:longClickable="true" />
</LinearLayout>
